<% include ./partials/header %>
<div class="row">
  <div class="col-md-6">
  <form method="post" action="/todo/edit/<%= todo.title %>">
    <div class="form-group">
      <label>Todo Title</label>
      <input class="form-control" type="text" name="title" disabled="disabled" value="<%= todo.title %>">
    </div>
    <div>
      <label>Todo Body</label>
      <textarea class="form-control" name="body" placeholder="Edit Body"><%= todo.body %></textarea>
      <br>
      <button class="btn btn-primary" type="submit">Submit</button>
      <a class="btn btn-danger" href="/">Cancel</a>
    </div>
  </form>
</div>
<% include ./partials/footer %>
